      <h2 class="font-headings mb-3">15. Loss of interest in work or other activities</h2>
        <%= f.input :question_14, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_14", onInput:"updateQuestionFourteen(this.value)" }  %>
      <div id="question_14" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">16. Avoiding work or other activities</h2>
        <%= f.input :question_15, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_15", onInput:"updateQuestionFifteen(this.value)" }  %>
      <div id="question_15" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">17. Loss of pleasure or satisfaction in life</h2>
        <%= f.input :question_16, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_16", onInput:"updateQuestionSixteen(this.value)" }  %>
      <div id="question_16" class="flex justify-center font-headings text-neediegreen">2</div>
      <h1 class="font-headings text-neediegreen mb-3">Physical Symptoms</h1>
      <h2 class="font-headings mb-3">18. Feeling tired</h2>
        <%= f.input :question_17, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_17", onInput:"updateQuestionSeventeen(this.value)" }  %>
      <div id="question_17" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">19. Difficulty sleeping or sleeping too much</h2>
        <%= f.input :question_18, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_18", onInput:"updateQuestionEighteen(this.value)" }  %>
      <div id="question_18" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">20. Decreased or increased appetite</h2>
        <%= f.input :question_19, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_19", onInput:"updateQuestionNineteen(this.value)" }  %>
      <div id="question_19" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">21. Loss of interest in sex</h2>
        <%= f.input :question_20, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_20", onInput:"updateQuestionTwenty(this.value)" }  %>
      <div id="question_20" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">22. Worrying about your health</h2>
        <%= f.input :question_21, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_21", onInput:"updateQuestionTwentyOne(this.value)" }  %>
      <div id="question_21" class="flex justify-center font-headings text-neediegreen">2</div>
      <h1 class="font-headings text-neediegreen mb-3">Suicidal Urge</h1>
      <h2 class="font-headings mb-3">23. Do you have any suicidal thoughts?</h2>
        <%= f.input :question_22, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_22", onInput:"updateQuestionTwentyTwo(this.value)" }  %>
      <div id="question_22" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">24. Would you like to end your life?</h2>
        <%= f.input :question_23, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_23", onInput:"updateQuestionTwentyThree(this.value)" }  %>
      <div id="question_23" class="flex justify-center font-headings text-neediegreen">2</div>
      <h2 class="font-headings mb-3">25. Do you have a plan for harming yourself?</h2>
        <%= f.input :question_24, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", list:"question_24", onInput:"updateQuestionTwentyFour(this.value)" }  %>
      <div id="question_24" class="flex justify-center font-headings text-neediegreen">2</div>

      <div class="form-actions mt-3 flex justify-center">
        <%= f.button :submit, "How depressed at I?", class: "font-headings py-2 px-5 border rounded-3xl text-white bg-neediegreen" %>
      </div>
    <% end %>
  </div>
</div>

