          <%= f.input :question_20, label: false, collection: 0..4, as: :range, input_html:{ min:"0", max:"4",step:"1", value: "0", list:"question_20", onInput:"updateQuestionTwenty(this.value)", class: "lg:w-80 w-48" }  %>
