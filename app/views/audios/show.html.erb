<div class="flex justify-center">
  <div class="lg:w-5/6 lg:m-5 shadow rounded-3xl p-3">
    <% if @audio.therapy.sub_category == 'music' %>
      <div class="flex justify-center p-3">
        <%= cl_image_tag("music_rqjazw", class:"w-20 h-20") %>
        <div class="m-3">
          <h1 class="font-headings font-bold lg:text-lg text-sm">So you're feeling <%= (@audio.therapy.mood.name).downcase %> and you want to listen to <%= @audio.therapy.sub_category %>?</h1>
          <h1 class="font-headings lg:text-lg text-sm">Press play on the following playlist:</h1>
        </div>
      </div>
    <% else %>
    <div class="flex justify-center p-3">
      <%= cl_image_tag("podcast_praz0v", class:"w-20 h-20") %>
      <div class="m-3">
        <h1 class="font-headings font-bold lg:text-lg text-sm">So you're feeling <%= (@audio.therapy.mood.name).downcase %> and you want to listen to a <%= @audio.therapy.sub_category %>?</h1>
        <h1 class="font-headings lg:text-lg text-sm">Press play on the follow podcast:</h1>
      </div>
      <% end %>
    </div>

    <div class="flex justify-center my-5">
      <h1 class="font-headings italic">
        <%= @audio.therapy.content.link %>
      </h1>
    </div>

  </div>
</div>
