 <div class="lg:flex">
  <div class="lg:w-1/2 h-96 m-5 bg-white rounded-3xl">
    <h1 class="font-headings text-4xl text-center p-3 justify-items-center text-neediegreen p-5">Log-in</h1>
    <div class="flex justify-center">
      <div class="w-1/2 xl:w-1/2">

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: false,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Your Email",
                        class: "font-headings mt-1 mb-4 block w-full rounded-2xl border-neediegreen bg-white focus:border-gray-300 focus:bg-white focus:ring-0" } %>
            <%= f.input :password,
                        required: false,
                        label: false,
                        input_html: { placeholder: "Your Password", class: "font-headings mt-1 mb-4 block w-full rounded-2xl border-neediegreen bg-white focus:border-gray-300 focus:bg-white focus:ring-0" } %>
          </div>
          <div class="text-xs text-right italic text-neediegreen font-headings">
          <%= render "devise/shared/links" %>
          </div>

          <div class="form-actions mt-3 flex justify-center">
            <%= f.button :submit, "Log in", class: "font-headings py-2 px-5 border rounded-3xl text-white bg-neediegreen" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <img src="https://images.unsplash.com/photo-1509909756405-be0199881695?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80" class="w-1/2"/>
</div>
