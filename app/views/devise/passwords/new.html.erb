 <div class="flex justify-center">
  <div class="lg:w-1/2 h-80 m-5 shadow rounded-3xl">
    <h1 class="font-headings text-4xl text-center p-3 justify-items-center text-neediegreen p-5">Forgot your password?</h1>
    <div class="flex justify-center">
      <div class="w-1/2 xl:w-1/2">

        <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= f.error_notification %>
          <div class="form-inputs">
            <%= f.input :email,
                        required: true,
                        autofocus: true,
                        label: false,
                        input_html: { placeholder: "Your Email", class: "font-headings mt-1 mb-4 block w-full rounded-2xl border-neediegreen bg-white focus:border-gray-300 focus:bg-white focus:ring-0" } %>
          </div>

          <div class="form-actions mt-3 flex justify-center">
            <%= f.button :submit, "Reset Password", class: "font-headings py-2 px-5 border rounded-3xl text-white bg-neediegreen" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
