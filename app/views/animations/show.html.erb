<div class="flex justify-center">
  <div class="lg:w-5/6 lg:m-5 p-3">

    <% if @animation.therapy.sub_category == 'joke of the day' %>
      <div class="flex justify-center p-3">
        <%= cl_image_tag("joke_lcmg27", class:"w-12 h-12") %>
        <div class="mx-2">
          <h1 class="font-headings font-bold text-base">Feeling <%= (@animation.therapy.mood.name).downcase %>? Let me crack you up</h1>
          <h1 class="font-headings text-base my-2">Check out this meme!</h1>
        </div>
      </div>
    <% end %>
      <div class="flex justify-center py-3">
        <img class="w-1/2" src="<%= @meme %>">
      </div>
      <div class="flex justify-center">
        <button class="font-headings py-2 px-4 border rounded-full text-white bg-neediegreen w-54 m-2 text-base"onClick="window.location.reload();">Get another one!</button>
      </div>
  </div>
</div>
