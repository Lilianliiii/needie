<div class="flex justify-center">
  <div class="p-3">
    <%= cl_image_tag("goodvibes_twiive", class:"w-24 h-24") %>
  </div>
  <div class="justify-center mt-5">
    <h1 class="font-headings text-lg">Which good vibes option can help you?</h1>
  </div>
</div>
<div class="lg:grid-cols-2 md:grid-cols-2 grid-cols-1 gap-3 flex justify-center p-3">
  <% @therapies.each do |therapy| %>
    <% if therapy.content_type == 'Reading' %>
      <%= link_to reading_path(therapy.content) do %>
        <div class="flex justify-center">
          <%= cl_image_tag("article_adl4ov", class:"w-28 h-28") %>
        </div>
        <h5 class="font-headings text-2xl text-lightgreen text-center mx-3 py-5">Good News from Around the World</h5>
      <% end %>
    <% elsif therapy.content_type == 'Animation' %>
      <%= link_to animation_path(therapy.content) do %>
        <div class="flex justify-center">
          <%= cl_image_tag("joke_lcmg27", class:"w-28 h-28") %>
        </div>
        <h5 class="font-headings text-2xl text-lightgreen text-center mx-3 py-5">Joke of the Day</h5>
      <% end %>
    <% end %>
  <% end %>
</div>
