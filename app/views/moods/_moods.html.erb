<div class="grid lg:grid-cols-6 md:grid-cols-3 grid-cols-2 gap-3 justify-center items-center flex-wrap p-3">
  <% @moods.each do |mood| %>
    <%= link_to mood_path(mood), class:"hover:text-neediegreen" do %>
      <div class="p-4 lg:w-52 text-center justify-between">
      <div class="flex justify-center">
        <%= cl_image_tag(mood.image, class:"w-28 h-28") %>
      </div>
        <h5 class="font-headings italic justify-center m-3 lg:text-lg"><%= mood.name%></h5>
      </div>
    <% end %>
  <% end %>
</div>
